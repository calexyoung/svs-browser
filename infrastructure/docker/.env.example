# SVS Browser - Docker Environment Configuration
# Copy this file to .env and customize the ports to avoid conflicts

# =============================================================================
# PORTS - Change these to avoid conflicts with other projects
# =============================================================================

# PostgreSQL (default: 5432, here using 5433 to avoid conflicts)
POSTGRES_PORT=5433

# Redis (default: 6379, here using 6380 to avoid conflicts)
REDIS_PORT=6380

# MinIO API (default: 9000)
MINIO_API_PORT=9000

# MinIO Console (default: 9001)
MINIO_CONSOLE_PORT=9001

# Backend API (default: 8000, here using 8010 to avoid conflicts)
BACKEND_PORT=8010

# Frontend (default: 3000, here using 3010 to avoid conflicts)
FRONTEND_PORT=3010

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=svs_browser
POSTGRES_USER=svs
POSTGRES_PASSWORD=svspassword

# =============================================================================
# MINIO / OBJECT STORAGE
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=svs-assets

# =============================================================================
# AI / EMBEDDINGS
# =============================================================================
# Options: local, openai, anthropic
EMBEDDING_BACKEND=local

# Optional - only needed if using cloud embeddings/LLM
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
